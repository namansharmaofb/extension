{
  "manifest_version": 3,
  "name": "Web Test Recorder",
  "version": "1.0.0",
  "description": "Record user interactions on web pages and send them as test cases to a backend.",
  "permissions": [
    "scripting",
    "activeTab",
    "storage",
    "tabs",
    "contextMenus",
    "webNavigation"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Web Test Recorder"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "utils.js",
        "locator-builders.js",
        "recorder.js",
        "playback.js",
        "content.js"
      ],
      "run_at": "document_idle",
      "all_frames": true,
      "match_about_blank": true
    }
  ]
}
